#!/bin/bash
ADB=""
SHA=`adb shell "su -c 'sha1sum /data/data/com.bbm/files/bbmcore/master.db'"`
if [ -d $HOME/ForensikBBM ]
then
echo $SHA | sed "s|/data/data/com.bbm/files/bbmcore|$HOME/ForensikBBM|g" | sed "s| |  |g" > $HOME/ForensikBBM/master.db.sha1
else
mkdir $HOME/backupBBM
echo $SHA | sed "s|/data/data/com.bbm/files/bbmcore|$HOME/ForensikBBM|g" | sed "s| |  |g" > $HOME/ForensikBBM/master.db.sha1
fi
echo $SHA
echo "Hash Berkas Barang Bukti ............ok"
adb shell "su -c 'cp /data/data/com.bbm/files/bbmcore/master.db /sdcard'"
if [ -d $HOME/ForensikBBM ]
then
adb pull /sdcard/master.db $HOME/ForensikBBM/master.db
else
mkdir $HOME/ForensikBBM
adb pull /sdcard/master.db $HOME/ForensikBBM/master.db
fi
echo "Menyimpan Barang Bukti di ~/ForensikBBM ............ok"

exit 0
